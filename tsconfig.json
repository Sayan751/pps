{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es6", "es2017", "dom"],
        "typeRoots": ["./node_modules/@types"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}